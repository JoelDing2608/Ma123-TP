#IMPORT

from math import *

#Fonction:
    
def PointFixe(g,x0,epsilon,NiterMax):
    n=1 
    xold=x0
    erreur= g(xold) - xold
    xnew=g(xold) 
    while abs(erreur) >= epsilon and n < NiterMax:
        n = n+1
        xnew=g(xold)
        erreur =(xnew-xold)
        xold=xnew
    return(xnew,n,abs(xnew-xold))

    
#Question 1: Methode du Point Fixe

def g1plus(x):
    return(9-3*x)**0.25 

aplus = PointFixe(g1plus,0,1E-10,1E4)
print(aplus)


def g1neg(x):
    return -(9-3*x)**0.25

aneg = PointFixe(g1neg,0,1E-10,1E4)
print(aneg)
print("="*10)


#Question 2: Methode du point fixe

def g2plus(x):
    return acos((2+x)/3)

bplus= PointFixe(g2plus,0,1E-10,1E4)
print(bplus)



def g2neg(x):
    return -(acos((2+x)/3))

bneg= PointFixe(g2neg,0,1E-10,1E4)
print(bneg)
print("="*10)

#Question 3: Methode du point fixe

def g3(x):
    return log(7/x)

c= PointFixe(g3,1,1E-10,1E4)
print(c)
print("="*10)

